      "description": "User management endpoints"
    }
  ],
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "components": {
    "securitySchemes": {
      "jwt": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http",
        "description": "Enter JWT token"
      }
    },
    "schemas": {
      "SignInDTO": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          },
          "device": {
            "type": "string",
            "enum": [
              "IOS",
              "ANDROID",
              "WEB"
            ]
          },
          "deviceId": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "password",
          "device",
          "deviceId"
        ]
      },
      "RegisterDTO": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*?&])[A-Za-z\\d@$!%*?&]{8,}$"
          },
          "userName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 20
          },
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 50
          },
          "bio": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255
          },
          "location": {
            "type": "string",
            "minLength": 3,
            "maxLength": 50
          }
        },
        "required": [
          "email",
          "password",
          "userName",
          "name",
          "bio",
          "location"
        ]
      },
      "UpdateProfileDTO": {
        "type": "object",
        "properties": {
          "userName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 20
          },
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 50
          },
          "bio": {
            "type": "string",
            "minLength": 3,
            "maxLength": 255
          },
          "location": {
            "type": "string",
            "minLength": 3,
            "maxLength": 50
          }
        }
      },
      "CreatePostDTO": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "visibility": {
            "default": "PUBLIC",
            "type": "string",
            "enum": [
              "PUBLIC",
              "FOLLOWERS_ONLY",
              "PRIVATE"
            ]
          },
          "mediaIds": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uuid"
            },
            "maxItems": 4
          },
          "parentId": {
            "type": "string",
            "format": "uuid"
          }
        },
        "required": [
          "text"
        ]
      },
      "CreateCommentDTO": {
        "type": "object",
        "properties": {
          "postId": {
            "type": "string",
            "format": "uuid"
          },
          "text": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500
          },
          "mentions": {
            "default": [],
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "mentionedProfileId": {
                  "type": "string",
                  "format": "uuid"
                },
                "startIndex": {
                  "type": "integer",
                  "minimum": 0
                },
                "endIndex": {
                  "type": "integer",
                  "minimum": 1
                },
                "surfaceText": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 100
                }
              },
              "required": [
                "mentionedProfileId",
                "startIndex",
                "endIndex",
                "surfaceText"
              ]
            },
            "maxItems": 20
          },
          "parentCommentId": {
            "type": "string",
            "format": "uuid"
          }
        },
        "required": [
          "postId",
          "text"
        ]
      },
      "RequestUploadUrlDTO": {
        "type": "object",
        "properties": {
          "filename": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
          },
          "mimetype": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "size": {
            "type": "integer",
            "minimum": 0,
            "exclusiveMinimum": true
          },
          "purpose": {
            "default": "post",
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          }
        },
        "required": [
          "filename",
          "mimetype",
          "size"
        ]
      }
    }
  }
}