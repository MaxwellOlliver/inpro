  "paths": {
    "/sessions": {
      "get": {
        "operationId": "RetrieveUserSessionsController_handler",
        "parameters": [
          {
            "name": "orderBy",
            "required": false,
            "in": "query",
            "schema": {
              "pattern": "^[a-zA-Z0-9]+:(asc|desc)$",
              "type": "string"
            }
          },
          {
            "name": "search",
            "required": false,
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "skip",
            "required": false,
            "in": "query",
            "schema": {
              "default": 0,
              "type": "number"
            }
          },
          {
            "name": "take",
            "required": false,
            "in": "query",
            "schema": {
              "maximum": 50,
              "default": 10,
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": ""
          }
        },
        "security": [
          {
            "bearer": []
          }
        ],
        "summary": "Retrieve user sessions",
        "tags": [
          "Sessions"
        ]
      }
    },
