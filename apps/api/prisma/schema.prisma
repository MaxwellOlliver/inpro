generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "commonjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profile   Profile?

  @@index([email])
  @@map("users")
}

model Profile {
  id       String @id @default(uuid())
  userId   String @unique
  user     User   @relation(fields: [userId], references: [id])
  name     String
  userName String @unique
  bio      String

  avatarId String? @unique
  bannerId String? @unique

  location  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]

  @@index([userId, userName])
  @@map("profiles")
}

model Media {
  id        String      @id @default(uuid())
  key       String      @unique
  type      MediaType   @default(IMAGE)
  status    MediaStatus @default(PENDING)
  size      Int
  purpose   String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // No relation with Media because we don't want to add back-relations for every relation with Media
  @@index([key])
  @@index([status])
  @@map("media")
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
  OTHER
}

enum MediaStatus {
  PENDING
  PROCESSING
  READY
  FAILED
}

model Post {
  id         String         @id @default(uuid())
  profileId  String
  profile    Profile        @relation(fields: [profileId], references: [id])
  text       String         @db.VarChar(255)
  visibility PostVisibility @default(PUBLIC)
  parentId   String?
  parent     Post?          @relation("PostReplies", fields: [parentId], references: [id])
  replies    Post[]         @relation("PostReplies")
  media      PostMedia[]
  deletedAt  DateTime?
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  @@index([profileId])
  @@index([parentId])
  @@index([createdAt])
  @@map("posts")
}

model PostMedia {
  id        String   @id @default(uuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  mediaId   String
  order     Int      @default(0)
  createdAt DateTime @default(now())

  @@unique([postId, mediaId])
  @@index([postId])
  @@map("post_media")
}

enum PostVisibility {
  PUBLIC
  FOLLOWERS_ONLY
  PRIVATE
}
